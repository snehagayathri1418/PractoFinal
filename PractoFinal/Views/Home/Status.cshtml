@model IEnumerable<PractoFinal.Models.AppVM>

@{
    ViewBag.Title = "Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <style>
        body {
            background-image: url('https://media.istockphoto.com/photos/blue-background-picture-id540533738?k=20&m=540533738&s=612x612&w=0&h=HZ2pFDGkHftUs75WiCkYi_Rrqo-srvBI41u7Jq98JgY=');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
    </style>
</div>

<h2>Booking Status</h2>
<div style="text-align:center ;font-size:50px">
    <i style="color:navy">
        Your Appointment is Booked.<br />Thank You for Visiting US
    </i>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.MobileNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.Doc_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doc_exp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doc_fees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Loc_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Spec_name)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.AppointmentID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PatientName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MobileNo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PatientCity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Gender)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Time)
    </td>


    <td>
        @Html.DisplayFor(modelItem => item.AppointmentDate)
    </td>


    <td>
        @Html.DisplayFor(modelItem => item.Doc_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Doc_exp)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Doc_fees)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Loc_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Spec_name)
    </td>


</tr>
    }

</table>
