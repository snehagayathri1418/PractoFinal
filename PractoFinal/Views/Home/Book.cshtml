@model PractoFinal.Models.Appp

@{
    ViewBag.Title = "Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book Appointment</h2>
<h2 style="color:red; text-align:center;font-style:italic">
    @TempData["status"]
</h2>
<div>
    <style>
        body {
            background-image: url('https://media.istockphoto.com/photos/blue-background-picture-id540533738?k=20&m=540533738&s=612x612&w=0&h=HZ2pFDGkHftUs75WiCkYi_Rrqo-srvBI41u7Jq98JgY=');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
    </style>
</div>

@using (Html.BeginForm())
{@Html.AntiForgeryToken()
<table class="table">
    <tr>
        <th>DoctorId</th>
        <td></td>
        <td>
            @Html.EditorFor(model => model.Doc_id, new { htmlAttributes = new { @Value = ViewBag.message, @class = "form-control", @readonly = "Readonly" } })

        </td>
    </tr>
    <tr>
        <th>AppointmentDate</th>
        <td></td>
        <td>@Html.EditorFor(model => model.AppointmentDate, new { htmlAttributes = new { @class = "form-control", @id = "datecontrol" } })</td>
    </tr>
    <tr>
        <th>TimeSlot</th>
        <td></td>
        <td>
                
            @Html.DropDownListFor(model => model.TimeSlotID, new SelectList(ViewBag.query, "TimeSlotID", "Time"), new { @class = "form-control" })
        </td>
    </tr>

    <tr>
        <th>PatientName</th>
        <td></td>
        <td>
            @Html.EditorFor(model => model.PatientName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PatientName, "", new { @class = "text-danger" })
        </td>
    </tr>
    <tr>
        <th>ContactNo.</th>
        <td></td>
        <td>
            @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })
        </td>
    </tr>

    <tr>
        <th>City</th>
        <td></td>
        <td>
            @Html.EditorFor(model => model.PatientCity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PatientCity, "", new { @class = "text-danger" })
        </td>
    </tr>
    <tr>
        <th>Gender</th>
        <td></td>
        <td>
            @Html.RadioButtonFor(model => model.Gender, "Male", new { @class = "hidebx", @id = "radio1" })
            <label class="lbl-radio" for="radio1">Male</label>
            @Html.RadioButtonFor(model => model.Gender, "Female", new { @class = "hidebx", @id = "radio2" })
            <label class="lbl-radio" for="radio2">Female</label>
            @Html.RadioButtonFor(model => model.Gender, "Other", new { @class = "hidebx", @id = "radio3" })
            <label class="lbl-radio" for="radio3">Other</label>
        </td>
    </tr>
   
    <tr>
        <td></td>
        <td></td>
        <td>
            <input type="submit" value="BookNow " class="btn btn-primary btn-lg active" />
        </td>
    </tr>

</table>
}